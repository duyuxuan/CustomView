<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.blcs.customview.view.CustomBaseView
            android:id="@+id/custom_view"
            android:layout_width="200dp"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <Button android:id="@+id/btn_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_view"/>
    <Button android:id="@+id/btn_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotate"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_alpha"
            app:layout_constraintTop_toTopOf="@id/btn_alpha"/>
    <Button android:id="@+id/btn_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scale"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_rotate"
            app:layout_constraintTop_toTopOf="@id/btn_alpha"/>
    <Button android:id="@+id/btn_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translate"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_scale"
            app:layout_constraintTop_toTopOf="@id/btn_alpha"/>
    <Button android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_alpha"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button android:id="@+id/btn_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="frame"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@+id/btn_set"
            app:layout_constraintLeft_toRightOf="@+id/btn_set"/>
    <Button android:id="@+id/btn_value_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value_animation"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@+id/btn_frame"
            app:layout_constraintLeft_toRightOf="@+id/btn_frame"/>

    <Button android:id="@+id/btn_object_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object_animation"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_set"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button android:id="@+id/btn_propertyValuesHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="propertyValuesHolder"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@+id/btn_object_animation"
            app:layout_constraintLeft_toRightOf="@+id/btn_object_animation"/>
    <Button android:id="@+id/btn_keyFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="keyFrame"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@+id/btn_propertyValuesHolder"
            app:layout_constraintLeft_toRightOf="@+id/btn_propertyValuesHolder"/>
    <Button android:id="@+id/btn_animate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animate"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_object_animation"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button android:id="@+id/btn_svg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="svg"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_object_animation"
            app:layout_constraintLeft_toRightOf="@+id/btn_animate"/>
    <Button android:id="@+id/btn_loupeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放大镜"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_svg"
            app:layout_constraintLeft_toLeftOf="parent"
    />
    <Button android:id="@+id/btn_scratch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刮刮乐"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btn_svg"
            app:layout_constraintLeft_toRightOf="@+id/btn_loupeView"
    />

    <ImageView android:id="@+id/iv_main"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:srcCompat= "@drawable/svg_vector"
               app:layout_constraintLeft_toRightOf="@+id/custom_view"
               app:layout_constraintTop_toTopOf="@+id/custom_view"
               app:layout_constraintBottom_toBottomOf="@+id/custom_view"
    />
</android.support.constraint.ConstraintLayout>